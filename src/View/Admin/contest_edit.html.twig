{% extends 'layout.html.twig' %}

{% block title %}Contest editor{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Contest editor</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-4 offset-1">
                <div class="text-center pb-3">
                    <h2>Select challenges</h2>
                </div>
                <div class="row list-container overflow-auto">
                    <ul class="list-group col-12">
                        {% for challenge in challenges|reverse %}
                            <li class="list-group-item list-group-item-dark rounded-sm p-1 pl-2 mb-2">
                                <p class="mb-0 existing_challenge pb-1"><i class="fa fa-flag"></i> {{ challenge.name }}</p>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-4 offset-2">
                <form action="" method="post">
                    <div class="row d-flex justify-content-center">
                        <div class="text-center pb-3">
                            <h2>Modify your contest</h2>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">Title</span>
                            </div>
                            <input type="text" class="form-control" placeholder="Contest title" aria-describedby="basic-addon1" name="name" value="{{ contest.name }}" required>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="campus" id="inputGroup-campus">Campus</label>
                            </div>
                            <select class="custom-select" id="campus" name="campus" required>
                                <option value="0">All campuses</option>
                                {% for campus in campuses %}
                                    <option value="{{ campus.id }}" {% if contest.campus_id == campus.id %}selected{% endif %}>{{ campus.city }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Description</span>
                            </div>
                            <textarea class="form-control" aria-label="Description" maxlength="200" placeholder="Between 30 and 200 characters" name="description" required>{{ contest.description }}</textarea>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">Duration</span>
                            </div>
                            <input type="number" class="form-control" placeholder="Contest duration in hours" aria-describedby="basic-addon1" name="duration" value="{{ contest.duration }}" required>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">Image</span>
                            </div>
                            <input type="url" class="form-control" placeholder="Paste here the url of the image" aria-describedby="basic-addon1" name="image" value="{{ contest.image }}">
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="form-group">
                            <button type="submit" name="saveContest" class="align-self-center btn btn-dark text-white">Save your contest <i class="fa fa-save"></i></button>
                            <button type="button" name="deleteContest" class="align-self-center btn btn-danger text-white" data-toggle="modal" data-target="#staticBackdrop">Delete <i class="fa fa-trash"></i></button>
                        </div>
                    </div>
                    <div class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content modal-contest">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">Delete the contest</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you really sure ?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-danger" name="deleteContest">Yes <i class="fa fa-trash"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}