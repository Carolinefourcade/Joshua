{% extends 'layout.html.twig' %}

{% block content %}
  <div class="container">
      <div class="row">
          <div class="col-12">
              <h1 class="text-center">Create specialty</h1>
          </div>
      </div>
      <div class="container">
          <div class="col-12 col-md-4 offset-md-4"
              <form class="" method="post">
                  <div class="row-specialty">
                      <div class="input-group specialty mb-3">
                          <div class="input-group-prepend">
                              <span class="input-group-text" id="basic-addon1">Specialty</span>
                          </div>
                          <input value="{{ specialty.title }}" type="text" class="form-control" name="specialty"
                                 aria-label="Specialty" aria-describedby="basic-addon1">
                      </div>
                      <p class="text-white">{{ errors.error_title }}</p>
                  </div>
                  <button class="btn specialty text-white " type="submit" class="btn btn-primary">Add Specialty</button>
              </form>

        <div class="mgt-20">
            <div class="form-group">
                <label class="text-white"> All Specialties</label>
                <ul multiple class="form-control list-specialty" id="exampleFormControlSelect2">
                    {% for specialty in specialties %}
                    <li>{{ specialty.title }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>


    </div>
</div>
    {% endblock %}

