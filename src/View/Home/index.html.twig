{% extends 'layout.html.twig' %}

{% block header %}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <img src="/assets/images/logo/logo_joshua_full.svg" alt="full logo joshua" class="img-fluid mr-lg-5">
        </div>
        <div class="container ml-lg-5">
            <form class="mt-5" method="post">
                <div class="col-lg-11 offset-lg-1">
                    <p class="text-red text-center">{{ error }}</p>
                </div>
                <div class="row">
                    <div class="col-lg-6 offset-lg-2">
                        <div class="form-group row">
                            <label for="email" class="col-lg-6 col-form-label text-white text-nowrap">Joshua@User ›
                                Login :</label>
                            <input type="text" class="form-control col-lg-6" name="pseudo" id="pseudo"
                                   placeholder="Enter your pseudo" value="{{ login }}"  required
                                   pattern="^[a-zA-ZáàâäãåçéèêëíìîïñóòôöõúùûüýÿæœÁÀÂÄÃÅÇÉÈÊËÍÌÎÏÑÓÒÔÖÕÚÙÛÜÝŸÆŒ0-9-_]{3,26}">
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-lg-6 col-form-label text-white text-nowrap">Joshua@User ›
                                Password :</label>
                            <div class="input-group col-lg-6 input-pass-index">
                                <input type="password" class="form-control" name="password" id="password"
                                       pattern="^(?=.*[0-9])(?=.*[!@#$%^&*{}_])(?=.*[a-z])(?=.*[A-Z])[a-zA-Z0-9!@#$%^&*{}_]{8,45}" required>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary show-pass show-hide-pass"  data-target="password"
                                            type="button" id="button-password">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn col-lg-1 enter-btn">
                        <img src="assets/images/button/enter-btn.svg" alt="enter button" class="img-fluid d-none d-lg-block">
                        <img src="assets/images/button/enter-btn-tel.svg" alt="enter button"
                             class="img-fluid d-lg-none float-right">
                    </button>
                </div>
            </form>
            <div class="container offset-lg-2 mt-5 pl-lg-4">
                <div class="row">
                    <p class="text-white">Joshua@User › <a href="/user/register" class="text-nowrap index-link">Create an account ?</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}

{%  block javascript %}
<script src="/assets/js/userForm.js"></script>
{% endblock %}
