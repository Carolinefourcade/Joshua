{% extends 'layout.html.twig' %}

{% block header %}{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <img src="/assets/images/logo/logo_joshua_full.svg" alt="" class="img-fluid mr-lg-5">
    </div>
    <div class="container ml-lg-5">
        <form class="mt-5" method="post">
            <div class="col-lg-11 offset-lg-1">
                <p class="text-red text-center">{{ error }}</p>
            </div>
            <div class="row">
                <div class="col-lg-6 offset-lg-2">
                    <div class="form-group row">
                        <label for="email" class="col-lg-6 col-form-label text-white text-nowrap">Joshua@User › Login :</label>
                        <input type="text" class="form-control col-lg-6" name="email" id="email" placeholder="email@example.com" value="{{ login }}">
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-lg-6 col-form-label text-white text-nowrap">Joshua@User › Password :</label>
                        <div class="input-group col-lg-6 input-pass-index">
                            <input type="password" class="form-control" name="password" id="password">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary show-pass" onmousedown="showPassword('password')" onmouseup="hidePassword('password')" type="button" id="button-addon2">
                                    <i class="fa fa-eye"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn col-lg-1 enter-btn">
                    <img src="assets/images/button/enter-btn.svg" alt="" class="img-fluid d-none d-lg-block">
                    <img src="assets/images/button/enter-btn-tel.svg" alt="" class="img-fluid d-lg-none float-right">
                </button>
            </div>
        </form>
        <div class="container offset-lg-2 mt-5 pl-lg-4">
            <div class="row">
                <p class="text-white">Joshua@User › <a href="/user/register" class="text-nowrap index-link">Create an account ?</a></p>
            </div>
            <div class="row">
                <p class="text-white">Joshua@User › <a href="/user/forgot" class="text-nowrap index-link">Forgot your password ?</a></p>
            </div>
        </div>r
    </div>
</div>
{% endblock %}

{%  block javascript %}
<script src="/assets/js/formControl.js"></script>
<script src="/assets/js/userForm.js"></script>
{% endblock %}
