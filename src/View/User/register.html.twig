{% extends 'layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1>Hey Wilder, you want to become a flag catcher ?</h1>
        </div>
    </div>
    <form method="POST" action="/User/insertUser">
        <div class="row">
            <div class="col-12 align-self-center text-center">
                <img src="https://avatars.githubusercontent.com/github" alt="avatar github" id="avatar" class="img-thumbnail rounded-circle" width="85">
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-xs-12 col-md-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Firstname *</span>
                    </div>
                    <input type="text" class="form-control" id="firstname" name="firstname" value="{{ user.firstname }}">
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Name *</span>
                    </div>
                    <input type="text" class="form-control" id="lastname" name="lastname" value="{{ user.name }}">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Email *</span>
                    </div>
                    <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}">
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Pseudo *</span>
                    </div>
                    <input type="text" class="form-control" id="joshua-pseudo" name="joshua-pseudo" value="{{ user.pseudo }}">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Password *</span>
                    </div>
                    <input type="password" class="form-control" id="password" name="password" value="">
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Repeat password *</span>
                    </div>
                    <input type="password" class="form-control" id="password-copy" name="password-copy" value="">
                </div>
            </div>
        </div>
        <div class="row d-flex">
            <div class="col-xs-12 col-md-6">
                <div class="input-group mb-3">
                    {% include 'Components/_select_campus.html.twig' %}
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="input-group mb-3">
                    {% include 'Components/_select_specialty.html.twig' %}
                </div>
            </div>
        </div>
        <div class="row d-flex">
            <div class="col-xs-12 col-md-6">
                <div class="row d-flex">
                    <div class="col-12">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-default">Pseudo github</span>
                            </div>
                            <input type="text" class="form-control" id="github" name="github"  value="{{ user.github }}">
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-xs-12 col-md-6 align-self-center">
                <div class="form-group ">
                    <button type="submit" name="registerUser" class="align-self-center btn btn-dark text-white">Register <i class="fa fa-save"></i></button>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}

{%  block javascript %}
<script src="/assets/js/user_form.js"></script>
{% endblock %}
