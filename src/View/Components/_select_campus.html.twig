<div class="input-group-prepend">
        <label class="input-group-text" for="campus" id="inputGroup-campus">Campus</label>
</div>
<select class="custom-select" id="campus" name="campus">
        {% for campus in campuses %}
                <option value="{{ campus.id }}" {% if user.campus == campus.id %} selected {% endif %}> {{ campus.city }}</option>
        {% endfor %}
</select>
